		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>
		<!-- Subscriber -->
		<service id="lenz_order_position_comment.subscriber.checkout_instock_info" class="LenzOrderPositionComment\Subscriber\CheckoutInstockInfo">
			<argument type="service" id="dbal_connection" />
			<tag name="shopware.event_subscriber" />
		</service>

		<service id="lenz_order_position_comment.subscriber.theme" class="LenzOrderPositionComment\Subscriber\Theme">
